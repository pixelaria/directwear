    <div class="box blog_webi">
        <div class="heading">{{ heading_title }}</div>
        <div class="box-content">
            <div class="box-product">
            <div>
                <div id="blog" class="owl-carousel owl-theme">
                {% for blog in blogs %}
                    <div class="product-block">
                        {% if blog.image %}
                            <div class="blog-left col-sm-6 col-xs-12">
                                <div class="webi-blog-image">
                                    <img src="{{ blog.image }}" alt="{{ heading_title }}" title="{{ heading_title }}" class="img-responsive" />
                                    <div class="blog-post-image-hover"> </div>
                                    <p class="webi_post_hover">
                                        <a class="icon zoom" title="Click to view Full Image " href="{{ blog.image }}" data-lightbox="example-set"></a>
                                        <a class="icon readmore_link" title="Click to view Read More " href="{{ blog.href }}"></a>
                                    </p>
                                </div>
                            </div>
                        {% endif %}
                        <div class="blog-right col-sm-6 col-xs-12">
                            <h4><a href="{{ blog.href }}">{{ blog.title }}</a> </h4>
                            <div class="webi-post-author">
                                <span class="write-comment"> <a href="{{ blog.href }}"><i class="fa fa-comments-o"></i>{{ blog.total_comments }} {{ entry_comment }}</a> </span>
                                 <span class="date-time">{{ blog.date_added }}</span>
                            </div>
                            <hr class="bhr"/>
                            <div class="blog-desc">{{ blog.description }}</div>
                            <!-- <div class="read_link"> <a href="{{ blog.href }}">{{ text_read_more }}</a> </div> -->
                                <div class="view-blog">
                                    <div class="read-more">
                                        <a href="{{ blog.href }}">
                                            {{ text_read_more }}<i class="fa fa-angle-double-right"></i>
                                        </a>
                                    </div>
                                </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
                </div>
            </div>
        </div>
         <!-- <div class="buttons-see-all text-center">
            <button type="button" onclick="location='{{ all_blogs }}';" class="btn btn-primary">{{ button_all_blogs }}</button>
        </div> -->
    </div>

<script type="text/javascript">
    $(document).ready(function() {
    $("#blog").owlCarousel({
    itemsCustom : [
    [0, 1],
    [600, 1],
    [992, 1],
    [1401, 2]
    ],
      // autoPlay: 1000,
      navigationText: ['<i class="fa fa-angle-left" aria-hidden="true"></i>', '<i class="fa fa-angle-right" aria-hidden="true"></i>'],
      navigation : true,
      pagination:false
    });
    });
</script>
